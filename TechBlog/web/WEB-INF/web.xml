<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>registerserlvet</servlet-name>
        <servlet-class>com.tech.blog.servlet.registerserlvet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginservlet</servlet-name>
        <servlet-class>com.tech.blog.servlet.loginservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.tech.blog.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>com.tech.blog.servlet.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addpostservlet</servlet-name>
        <servlet-class>com.tech.blog.servlet.addpostservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>likeservlet</servlet-name>
        <servlet-class>com.tech.blog.servlet.likeservlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerserlvet</servlet-name>
        <url-pattern>/registerserlvet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginservlet</servlet-name>
        <url-pattern>/loginservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/EditServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addpostservlet</servlet-name>
        <url-pattern>/addpostservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>likeservlet</servlet-name>
        <url-pattern>/likeservlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
